
@model CatGame.Models.Cats.CatDetailsViewModel

<h1> @Html.DisplayFor(model => model.CatName) </h1>

<div>
    <h4> Cat details: </h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="ID" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ID)
        </div>
        <div class="form-group row">
            <label asp-for="CatName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CatName)
        </div>
        <div id="imagediv">
            @foreach (var image in Model.Image)
            {
                <partial name="_Images" model="image" />
            }
        </div>

        <div class="form-group row">
            <label asp-for="CatHealth" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CatHealth)
        </div>
        <div class="form-group row">
            <label asp-for="CatLevel" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CatLevel)
        </div>
        <div class="form-group row">
            <label asp-for="CatXP" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CatXP)
        </div>
        <div class="form-group row">
            <label asp-for="CatXPNextLevel" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CatXPNextLevel)
        </div>

        <div class="form-group row">
            <label asp-for="CatXPNextLevel" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CatXPNextLevel)
        </div>

        <div class="form-group row">
            <label asp-for="CatStatus" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CatStatus)
        </div>



        <div class="form-group row">
            <label asp-for="PrimaryAttackName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.PrimaryAttackName)
            <label asp-for="PrimaryAttackPower" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.PrimaryAttackPower)
        </div>
        <div class="form-group row">
            <label asp-for="SecondaryAttackName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.SecondaryAttackName)
            <label asp-for="SecondaryAttackPower" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.SecondaryAttackPower)
        </div>
        <div class="form-group row">
            <label asp-for="SpecialAttackName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.SpecialAttackName)
            <label asp-for="SpecialAttackPower" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.SpecialAttackPower)
        </div>

    </dl>

    <a asp-action="Index" asp-controller="cats" class="btn btn-secondary">Index</a>
</div>